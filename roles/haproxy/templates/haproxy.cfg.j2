defaults
    mode                    http
    log                     global
    option                  httplog
    option                  dontlognull
    option http-server-close
    option forwardfor       except 127.0.0.0/8
    option                  redispatch
    retries                 3
    timeout http-request    10s
    timeout queue           1m
    timeout connect         10s
    timeout client          1m
    timeout server          1m
    timeout http-keep-alive 10s
    timeout check           10s
    maxconn                 3000

frontend ft_jenkins
    bind *:80
    default_backend bk_jenkins

backend bk_jenkins
    server jenkins1 {{ server1 }}:8080 check
    server jenkins2 {{ server2 }}:8080 check backup
